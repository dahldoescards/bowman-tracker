# Environment Configuration for Bowman Draft Tracker
# Copy this file to .env and fill in your values

# Proxy Configuration
# Path to your proxy file (format: host:port:username:password per line)
PROXY_FILE=/path/to/your/proxies.txt

# Classifier Model Path
# Path to the trained BoxVsPlayerClassifier model
CLASSIFIER_PATH=./models/player_vs_box_classifier_combined.pkl

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=0

# Server Configuration
HOST=127.0.0.1
PORT=5000

# Scheduler Configuration
# Interval in seconds between data fetches (default: 3600 = 1 hour)
FETCH_INTERVAL=3600

# Auto-start scheduler on server startup (true/false)
AUTO_SCHEDULE=false
